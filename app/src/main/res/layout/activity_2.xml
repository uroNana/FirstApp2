<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    //Constraint Layout
    //Text View con testo "activity Second"
    <TextView
        android:id="@+id/activity2_text"
        android:text="@string/activity2_text"
        style="@style/text_special"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    // bottone di navigazione con testo "to home fragment"
    <Button
        android:id="@+id/activity2_button_navigation"
        style="@style/button_normal"
        android:text="@string/to_home_fragment_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity2_text" />

</androidx.constraintlayout.widget.ConstraintLayout>
