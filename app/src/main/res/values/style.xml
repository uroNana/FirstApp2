<?xml version="1.0" encoding="utf-8"?>
<resources>

    //elenco di stili con caratteristiche associabili a testi e bottoni

    <style name="button_normal">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="text_notmal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_inTop_for_center</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="text_special">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/my_light_primary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:gravity">center</item>
    </style>
</resources>